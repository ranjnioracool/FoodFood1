<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="60dp"/>
            <stroke android:width="2dp" android:color="#fff"/>
            <gradient android:angle="-90" android:startColor="#6D3E75" android:endColor="#CC15EC"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#78E3CF"/>
            <solid android:color="#FD2718"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:width="1dp" android:color="#000"/>
            <gradient android:angle="-90" android:startColor="#fff" android:endColor="@color/colorgreen"/>
        </shape>
    </item>
</selector>